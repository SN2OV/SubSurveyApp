<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_backgroud"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WalkSurveyDataPerActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/openDoorTimeTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="列车开门时刻："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/openDoorTimeET1"
                style="@style/SurveyEditTextStyle"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/openDoorTimeReset1"
                android:layout_toRightOf="@+id/openDoorTimeTV1"
                >
            </EditText>

            <ImageView
                android:id="@+id/openDoorTimeReset1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:src="@drawable/reset_survey" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/gotoPlatformTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="进站刷卡时刻："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/gotoPlatformET"
                style="@style/SurveyEditTextStyle"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/gotoPlatformReset"
                android:layout_toRightOf="@+id/gotoPlatformTV"
                 />

            <ImageView
                android:id="@+id/gotoPlatformReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:src="@drawable/reset_survey" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/arrivePlatformTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="到达站台时刻："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/arrivePlatformET"
                style="@style/SurveyEditTextStyle"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/arrivePlatformReset"
                android:layout_toRightOf="@+id/arrivePlatformTV"
                 />

            <ImageView
                android:id="@+id/arrivePlatformReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:src="@drawable/reset_survey" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/openDoorTimeTV2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="列车开门时刻："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/openDoorTimeET2"
                style="@style/SurveyEditTextStyle"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/openDoorTimeReset2"
                android:layout_toRightOf="@+id/openDoorTimeTV2"
                 />

            <ImageView
                android:id="@+id/openDoorTimeReset2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:src="@drawable/reset_survey" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/goOutPlatformTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="出站刷卡时刻："
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/goOutPlatformET"
                style="@style/SurveyEditTextStyle"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/goOutPlatformReset"
                android:layout_toRightOf="@+id/goOutPlatformTV"
                 />

            <ImageView
                android:id="@+id/goOutPlatformReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:src="@drawable/reset_survey" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/querySureyDataIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/linearLayout1"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/query_survey_cn_selector" />

    <ImageView
        android:id="@+id/saveSurveyDataIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/linearLayout1"
        android:layout_alignTop="@+id/querySureyDataIV"
        android:layout_marginRight="44dp"
        android:src="@drawable/save_survey_cn_selector" />

</RelativeLayout>