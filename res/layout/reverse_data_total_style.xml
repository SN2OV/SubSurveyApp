<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/rsTotal_IDTV"
            style="@style/InfoTextViewStyle"
            android:layout_width="50dp" />

        <View style="@style/vertical_layout" />

        <TextView
            android:id="@+id/rsTotal_NameTV"
            style="@style/InfoTextViewStyle"
            android:layout_width="60dp" />

        <View style="@style/vertical_layout" />

        <TextView
            android:id="@+id/rsTotal_DateTV"
            style="@style/InfoTextViewStyle"
            android:layout_width="100dp" />

        <View style="@style/vertical_layout" />

        <TextView
            android:id="@+id/rsTotal_TimeTV"
            style="@style/InfoTextViewStyle"
            android:layout_width="100dp" />

        <View style="@style/vertical_layout" />

        <TextView
            android:id="@+id/rsTotal_StationTV"
            style="@style/InfoTextViewStyle"
            android:layout_width="100dp" />

        <View style="@style/vertical_layout" />

        <TextView
            android:id="@+id/rsTotal_LineTV"
            style="@style/InfoTextViewStyle"
            android:layout_width="100dp" />

        <View style="@style/vertical_layout" />

        <TextView
            android:id="@+id/rsTotal_trainStartTimeTV"
            style="@style/InfoTextViewStyle"
            android:layout_width="140dp" />

        <View style="@style/vertical_layout" />

        <TextView
            android:id="@+id/rsTotal_CountTotalTV"
            style="@style/InfoTextViewStyle"
            android:layout_width="50dp" />
    </LinearLayout>

</RelativeLayout>
